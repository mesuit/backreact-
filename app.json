{
  "name": "Assignment Hub Backend",
  "description": "Backend for Assignment Hub - handles assignments, users, and AI integrations.",
  "repository": "https://github.com/mesuit/backreact-",
  "keywords": ["node", "express", "mongodb", "ai", "assignments"],
  "env": {
    "MONGO_URI": {
      "description": "MongoDB Atlas connection string",
      "required": true
    }
  },
  "scripts": {
    "start": "node server.js"
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  }
}
